generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  category        String
  teamSize        Int
  currentMembers  Int
  tags            String[]
  createdAt       DateTime @default(now())
  creator         String
  creatorId       String
  longDescription String?
  images          String[]
  goals           String[]
  requirements    String[]
  socialLinks     Json?
  timeline        String?
  lookingFor      String[]
  memberIds       String[]
}

